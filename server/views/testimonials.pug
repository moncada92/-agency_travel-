extends ./layout/index

block contenido
  main.container.mt-5
    h1.text-center= pagina
    blockquote.text-center Read about our clients and their experiences
      include ./layout/block-testimonials

    .row
      .col-md-12
        h2.d-block.w-100.text-center Add a testimonial

        if(errors)
          each error in errors
            .alert.col.alert-danger.text-center= error.msg

      .row.justify-content-center.col
        .col-md-8
          form(action="/testimonials" method="POST")
            .form-group
              label(for="name") Name
              input#name(type="text", placeholder="Your Name", name="name", class="form-control", value= name)
            .form-group
              label(for="email") Email
              input#email(type="text", placeholder="Your Email", name="email", class="form-control", value= email)
            .form-group
              label(for="message") Message
              textarea#message(class="form-control" name="message", rows="3")= message
            input.btn.btn-success.btn-block(type="submit")
